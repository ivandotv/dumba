{
  "name": "dumba-monorepo",
  "version": "0.0.0",
  "private": true,
  "author": "Ivan Vlatkovic",
  "workspaces": {
    "packages": [
      "demo",
      "packages/*",
      "docs"
    ],
    "nohoist": [
      "**/@types/jest",
      "**/@types/jest/**"
    ]
  },
  "scripts": {
    "build:demo": "lerna run build --scope demo --include-dependencies --stream",
    "test:ci": "lerna run test:ci --stream",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "lint:ci": "lerna run lint:ci --stream",
    "type:check": "lerna run type:check --stream",
    "build": "lerna run build --stream",
    "docs": "lerna run docs --stream",
    "prepare": "husky install",
    "release:old": "yarn run prepublish && yarn changeset publish",
    "release": "yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "async": "^3.2.1",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "minimist": "^1.2.5",
    "rollup": "^2.56.3",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2"
  }
}
